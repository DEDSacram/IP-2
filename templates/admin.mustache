<h1>Editace dat</h1>
<form method="GET">
<input id="search" type="text" placeholder="Type here">
<input id="submit" type="submit" value="Search">
</form>
<h2>Místnosti</h2>
 {{# rooms }}
<form method="post">
    <div class="mt-3">
    <label for="name">Název</label>
        <input type="text" name="name" id="name" value="{{name}}" class="form-control"/>
        {{#errors.name}}<small class="text-warning">{{errors.name}}</small>{{/errors.name}}
    </div>

    <div class="mt-3">
    <label for="no">Číslo</label>
        <input type="text" name="no" id="no" value="{{no}}" class="form-control"/>
        {{#errors.no}}<small class="text-warning">{{errors.no}}</small>{{/errors.no}}
    </div>

    <div class="mt-3">
    <label for="phone">Telefon</label>
        <input type="text" name="phone" id="phone" value="{{phone}}" class="form-control"/>
        {{#errors.phone}}<small class="text-warning">{{errors.phone}}</small>{{/errors.phone}}
    </div>

    <div class="mt-3">
        {{#room.room_id}}<input type="hidden" name="room_id" value="{{room_id}}">{{/room.room_id}}
        <input type="submit" value="Upravit" class="btn btn-primary" />
        <input type="submit" value="Odstranit" class="btn btn-primary" />
    </div>
</form>
{{/rooms}}
<h2>Zaměstnanci</h2>
{{# employees }}
<form method="post">
    <div class="mt-3">
    <label for="name">Jméno</label>
        <input type="text" name="name" id="name" value="{{name}}" class="form-control"/>
        {{#errors.name}}<small class="text-warning">{{errors.name}}</small>{{/errors.name}}
    </div>

    <div class="mt-3">
    <label for="surname">Příjmení</label>
        <input type="text" name="surname" id="surname" value="{{surname}}" class="form-control"/>
        {{#errors.surname}}<small class="text-warning">{{errors.surname}}</small>{{/errors.surname}}
    </div>

    <div class="mt-3">
    <label for="job">Práce</label>
        <input type="text" name="job" id="job" value="{{job}}" class="form-control"/>
        {{#errors.job}}<small class="text-warning">{{errors.job}}</small>{{/errors.job}}
    </div>

     <div class="mt-3">
    <label for="wage">Plat</label>
        <input type="number" name="wage" id="wage" value="{{wage}}" class="form-control"/>
        {{#errors.wage}}<small class="text-warning">{{errors.wage}}</small>{{/errors.wage}}
    </div>

     <div class="mt-3">
    <label for="room">Místnost</label>
        <input type="number" name="room" id="room" value="{{room}}" class="form-control"/>
        {{#errors.room}}<small class="text-warning">{{errors.room}}</small>{{/errors.room}}
    </div>

     <div class="mt-3">
    <label for="login">Login</label>
        <input type="text" name="login" id="login" value="{{login}}" class="form-control"/>
        {{#errors.login}}<small class="text-warning">{{errors.login}}</small>{{/errors.login}}
    </div>


     <div class="mt-3">
    <label for="password">Heslo</label>
        <input type="password" name="password" id="password" value="{{password}}" class="form-control"/>
        {{#errors.password}}<small class="text-warning">{{errors.password}}</small>{{/errors.password}}


     <div class="mt-3">
    <label for="admin">Admin</label>
        <input type="checkbox" name="admin" id="admin"/>
    </div>


    <div class="mt-3">
        {{#room.employee_id}}<input type="hidden" name="employee_id" value="{{employee_id}}">{{/room.employee_id}}
        <input type="hidden" name="action" value="{{action}}" />
        <input type="submit" value="Upravit" class="btn btn-primary" />
        <input type="submit" value="Odstranit" class="btn btn-primary" />
    </div>

</form>
{{/employees}}