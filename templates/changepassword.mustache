<h1>Login</h1>
<form method="post">
    <div class="mt-3">
        <input type="password" name="password" id="password" value="" placeholder="New Password" class="form-control"/>
        {{#errors.name}}<small class="text-warning">{{errors.name}}</small>{{/errors.name}}
    </div>

    <div class="mt-3">
        <input type="password" name="confirmpassword" id="confirmpassword" value="" placeholder="Confirm Password" class="form-control"/>
        {{#errors.no}}<small class="text-warning">{{errors.no}}</small>{{/errors.no}}
        <input type="submit" class="btn btn-primary"/>
    </div>

</form>