<h1>Člověk</h1>
<form method="post">
    <div class="mt-3">
    <label for="name">Jméno</label>
        <input type="text" name="name" id="name" value="{{room.name}}" class="form-control"/>
        {{#errors.name}}<small class="text-warning">{{errors.name}}</small>{{/errors.name}}
    </div>

    <div class="mt-3">
    <label for="surname">Příjmení</label>
        <input type="text" name="surname" id="surname" value="{{room.surname}}" class="form-control"/>
        {{#errors.surname}}<small class="text-warning">{{errors.surname}}</small>{{/errors.surname}}
    </div>

    <div class="mt-3">
    <label for="job">Práce</label>
        <input type="text" name="job" id="job" value="{{room.job}}" class="form-control"/>
        {{#errors.job}}<small class="text-warning">{{errors.job}}</small>{{/errors.job}}
    </div>

     <div class="mt-3">
    <label for="wage">Plat</label>
        <input type="number" name="wage" id="wage" value="{{room.wage}}" class="form-control"/>
        {{#errors.wage}}<small class="text-warning">{{errors.wage}}</small>{{/errors.wage}}
    </div>

     <div class="mt-3">
    <label for="room">Místnost</label>
        <input type="number" name="room" id="room" value="{{room.room}}" class="form-control"/>
        {{#errors.room}}<small class="text-warning">{{errors.room}}</small>{{/errors.room}}
    </div>

     <div class="mt-3">
    <label for="login">Login</label>
        <input type="text" name="login" id="login" value="{{room.login}}" class="form-control"/>
        {{#errors.login}}<small class="text-warning">{{errors.login}}</small>{{/errors.login}}
    </div>


     <div class="mt-3">
    <label for="password">Heslo</label>
        <input type="password" name="password" id="password" value="{{room.password}}" class="form-control"/>
        {{#errors.password}}<small class="text-warning">{{errors.password}}</small>{{/errors.password}}


     <div class="mt-3">
    <label for="admin">Admin</label>
         {{#admin}}
        <input type="checkbox" name="admin" id="admin" checked/>
        {{/admin}}
        {{^admin}}
        <input type="checkbox" name="admin" id="admin"/>
        {{/admin}}
    </div>


    <div>
    {{#keys}}
    {{#show}}
    <div>
  <input type="checkbox" id="{{key_id}}" name="key{{key_id}}"
         checked>
  <label for="{{key_id}}">{{name}}</label>
    </div>
    {{/show}}
      {{^show}}
    <div>
  <input type="checkbox" id="{{key_id}}" name="rok{{room_id}}">
  <label for="{{key_id}}">{{name}}</label>
    </div>
    {{/show}}
    {{/keys}}
    </div>
    <div class="mt-3">
        {{#room.employee_id}}<input type="hidden" name="employee_id" value="{{room.employee_id}}">{{/room.employee_id}}
        <input type="hidden" name="action" value="{{action}}" />
        <input type="submit" value="{{action}}" class="btn btn-primary" />
    </div>

</form>